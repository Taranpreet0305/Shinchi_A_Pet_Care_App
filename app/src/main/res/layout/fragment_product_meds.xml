<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Product_Meds"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Meds"
                android:textAlignment="textStart"
                android:textColor="#FFC107"
                android:textSize="80sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productsSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="serif"
                android:text="Made with love for your furry friend"
                android:textColor="#333D79"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="77dp"
            android:layout_height="81dp"
            android:contentDescription="Pet logo"
            android:src="@drawable/ologo" />
    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/topBarLayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1">

        <LinearLayout
            android:id="@+id/productListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/meds_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/dashed_outline"
                    android:contentDescription="Product image"
                    android:scaleType="centerInside"
                    android:src="@drawable/pills_bottle"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/productDetails1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/meds_img"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/meds_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="name"
                        android:textColor="#333D79"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/meds_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="PRICE"
                        android:textColor="#333D79"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/meds_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:backgroundTint="#FFC107"
                        android:text="ADD TO CART"
                        android:textColor="#333D79"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        app:icon="@drawable/addcart"
                        app:iconTint="#333D79"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="16dp"
                android:background="#DDDDDD" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/meds_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/dashed_outline"
                    android:contentDescription="Product image"
                    android:scaleType="centerInside"
                    android:src="@drawable/first_aid_kit"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/productDetails2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/meds_img"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/meds_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="name"
                        android:textColor="#333D79"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/meds_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="PRICE"
                        android:textColor="#333D79"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/meds_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:backgroundTint="#FFC107"
                        android:text="ADD TO CART"
                        android:textColor="#333D79"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        app:icon="@drawable/addcart"
                        app:iconTint="#333D79"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="16dp"
                android:background="#DDDDDD" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productItem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/meds_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/dashed_outline"
                    android:contentDescription="Product image"
                    android:scaleType="centerInside"
                    android:src="@drawable/vaccination"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/productDetails3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/meds_img"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/meds_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="name"
                        android:textColor="#333D79"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/meds_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="PRICE"
                        android:textColor="#333D79"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/meds_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:backgroundTint="#FFC107"
                        android:text="ADD TO CART"
                        android:textColor="#333D79"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        app:icon="@drawable/addcart"
                        app:iconTint="#333D79"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="16dp"
                android:background="#DDDDDD" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productItem4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/meds_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/dashed_outline"
                    android:contentDescription="Product image"
                    android:scaleType="centerInside"
                    android:src="@drawable/drug"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/productDetails4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/meds_img"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/meds_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="name"
                        android:textColor="#333D79"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/meds_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="PRICE"
                        android:textColor="#333D79"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/meds_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:backgroundTint="#FFC107"
                        android:text="ADD TO CART"
                        android:textColor="#333D79"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        app:icon="@drawable/addcart"
                        app:iconTint="#333D79"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="16dp"
                android:background="#DDDDDD" />

            <!-- Go to Cart button added here -->
            <Button
                android:id="@+id/go_to_cart_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›’ Go to Cart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/food_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>