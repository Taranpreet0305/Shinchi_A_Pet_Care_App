<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:background="#FFFFFF"
    tools:context=".AddCart">

    <LinearLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="Pet logo"
                android:src="@drawable/ologo" />

        </LinearLayout>

        <TextView
            android:id="@+id/productsTitle"
            android:layout_width="203dp"
            android:layout_height="99dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/amoresa"
            android:text="Cart"
            android:textAlignment="textEnd"
            android:textColor="#FFC107"
            android:textSize="70sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/topBarLayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1">

        <LinearLayout
            android:id="@+id/productListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/productImage1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/dashed_outline"
                    android:contentDescription="Product image"
                    android:scaleType="centerInside"
                    android:src="@drawable/dryer"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/productDetails1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/productImage1"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/productName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="name"
                        android:textColor="#333D79"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="PRICE"
                        android:textColor="#333D79"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/Removebtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:backgroundTint="#FFC107"
                        android:text="Remove"
                        android:textColor="#333D79"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        app:iconTint="#333D79"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="16dp"
                android:background="#DDDDDD" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/productImage2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/dashed_outline"
                    android:contentDescription="Product image"
                    android:scaleType="centerInside"
                    android:src="@drawable/pet_shampoo"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/productDetails2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/productImage2"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/productName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="name"
                        android:textColor="#333D79"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="PRICE"
                        android:textColor="#333D79"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/Removebtn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:backgroundTint="#FFC107"
                        android:text="Remove"
                        android:textColor="#333D79"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        app:iconTint="#333D79"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="16dp"
                android:background="#DDDDDD" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productItem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/productImage3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/dashed_outline"
                    android:contentDescription="Product image"
                    android:scaleType="centerInside"
                    android:src="@drawable/nail_clipper"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/productDetails3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/productImage3"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/productName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="name"
                        android:textColor="#333D79"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productPrice3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="PRICE"
                        android:textColor="#333D79"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/Removebtn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:backgroundTint="#FFC107"
                        android:text="Remove"
                        android:textColor="#333D79"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        app:iconTint="#333D79"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="16dp"
                android:background="#DDDDDD" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productItem4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/productImage4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/dashed_outline"
                    android:contentDescription="Product image"
                    android:scaleType="centerInside"
                    android:src="@drawable/grooming"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/productDetails4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/productImage4"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/productName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="name"
                        android:textColor="#333D79"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productPrice4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="PRICE"
                        android:textColor="#333D79"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/Removebtn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:backgroundTint="#FFC107"
                        android:text="Remove"
                        android:textColor="#333D79"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        app:iconTint="#333D79"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="16dp"
                android:background="#DDDDDD" />

            <ImageView
                android:id="@+id/Orderbtn1"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFC107"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:src="@drawable/orderbtn"
                android:textColor="#333D79"
                android:textSize="14sp"
                app:cornerRadius="16dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="#333D79" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
